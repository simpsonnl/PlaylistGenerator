    <nav class="navbar navbar-dark justify-content-between" style="background-color: #343a40;">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><h1>Playlist Generator</h1></a>
            @if (Model.profile == null)
            {
                <button class="rounded btn btn-light" type="button" id="connectButton">
                    Connect with Spotify
                </button>
            }
            @if (Model.profile != null)
            {
                
        <div class="dropdown">
                @*<div style="color:white; padding-right:20px; padding-top:15px;">Logout</div>*@
                <button class="rounded btn btn-light dropdown-toggle float-right" type="button" id="userButtonDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                        style=@(Model.profile.Images.Count <= 0 ? "": "padding:6px 5px 2px 5px;")>
                    <img src="@(Model.profile.Images.Count <= 0 ? "" : Model.profile.Images[0].Url)"
                         height="25" width="25" style="border-radius:50%; margin-bottom:4px;"
                         @(Model.profile.Images.Count <= 0 ? "hidden" : "") />
                    @Model.profile.DisplayName
                </button>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="@Url.Action("Logout", "Home")">Logout</a>
                </div>
            
        </div>
            }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()


        <hr style="border-top: 1px solid white;" />
        <footer style="color:white;">
            <p>&copy; @DateTime.Now.Year - Playlist Generator</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap4-toggle.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-ui-1.12.1.min.js")
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $('#toggle-two').bootstrapToggle({
                on: 'Artist',
                off: 'Song',
                height: 10,
                offstyle: 'primary',
                onstyle: 'primary',
                style: '.slow .toggle-group { transition: left 0.7s; -webkit-transition: left 0.7s; }'

            });
        });




        $('#connectButton').click(function (res) {
            var my_client_id = "52c0f5ab6e5f4a2f83da6c5fad1c6bac";
            var scopes = "user-read-private user-read-email user-read-recently-played user-top-read playlist-modify-public playlist-modify-private";
            //return Redirect("" +
            //          "?response_type=code" +
            //          "&client_id=" + my_client_id +
            //          "&scope=" + scopes +
            var redirect_uri = 'https://localhost:44385/Authorize/Callback/';
            $(location).attr('href', "https://accounts.spotify.com/authorize?response_type=code&redirect_uri=" + redirect_uri + "&client_id=" + my_client_id + "&scope=" + scopes + "&show_dialog=true")

        });


    </script>
</body>
</html>
